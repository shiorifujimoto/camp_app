<h1>Posts#index</h1>
<p>記事の一覧ページ</p>
<%= link_to "新規投稿する", new_post_path %>

<% @posts.each do |post|%>
  <div class="card">
    <div class="example">
      <%= link_to image_tag("sample_image.jpg", class: :card__img ), root_path%>
      <div class="date">
        <p>12</p>
        <p>2021</p>
      </div>
    </div>
    <div class="card__body">
      <%= link_to post.title, root_path, class: :card__title%>
      <%= link_to "by #{post.user.name}", root_path, class: :card__user %>
    </div>
  </div>
<% end %>